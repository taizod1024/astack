// Prisma schema
model User {
	id        String   @id @default(uuid())
	email     String   @unique
	password  String
	name      String?
	comment   String?
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}

generator client {
	provider = "prisma-client-js"
    output   = "../src/generated/client"
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}
